<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background1"
    android:gravity="center
"
    android:orientation="vertical"
    tools:context=".MainActivity3">

    <CheckBox
        android:id="@+id/fire"
        android:layout_width="107dp"
        android:layout_height="31dp"
        android:text="FIRE"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.082"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/earthquake"
        app:layout_constraintVertical_bias="0.165" />

    <CheckBox
        android:id="@+id/chemicalSpills"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="CHEMICAL PILLS"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.092"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.141" />

    <CheckBox
        android:id="@+id/damFailure"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="DAM FAILURE"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.085"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/chemicalSpills"
        app:layout_constraintVertical_bias="0.095" />

    <CheckBox
        android:id="@+id/earthquake"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="EARTHQUAKE"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.085"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/covidRelated"
        app:layout_constraintVertical_bias="0.124" />

    <CheckBox
        android:id="@+id/floods"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:padding="5dp"
        android:text="FLOODS"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.05"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/fire"
        app:layout_constraintVertical_bias="0.19" />

    <CheckBox
        android:id="@+id/covidRelated"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:padding="5dp"
        android:text="COVID RELATED"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.059"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/damFailure"
        app:layout_constraintVertical_bias="0.097" />

    <CheckBox
        android:id="@+id/thunderStorms"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:padding="5dp"
        android:text="THUNDER STORMS"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.506"
        app:layout_constraintStart_toEndOf="@+id/chemicalSpills"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.131" />

    <CheckBox
        android:id="@+id/robbery"
        android:layout_width="110dp"
        android:layout_height="35dp"
        android:layout_margin="10dp"
        android:padding="5dp"
        android:text="ROBBERY"
        app:layout_constraintBottom_toTopOf="@+id/confirm_button"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.449"
        app:layout_constraintStart_toEndOf="@+id/fire"
        app:layout_constraintTop_toBottomOf="@+id/extremeHeat"
        app:layout_constraintVertical_bias="0.198" />

    <CheckBox
        android:id="@+id/lossChild"
        android:layout_width="144dp"
        android:layout_height="87dp"
        android:layout_margin="10dp"
        android:padding="5dp"
        android:text="LOSS CHILD OR ALZHEIMER FAMILY MEMBER"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.343"
        app:layout_constraintStart_toEndOf="@+id/covidRelated"
        app:layout_constraintTop_toBottomOf="@+id/robbery"
        app:layout_constraintVertical_bias="0.1" />

    <CheckBox
        android:id="@+id/rabies"
        android:layout_width="136dp"
        android:layout_height="38dp"
        android:layout_margin="10dp"
        android:padding="5dp"
        android:text="RABBIES IN THE AREA"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.366"
        app:layout_constraintStart_toEndOf="@+id/covidRelated"
        app:layout_constraintTop_toBottomOf="@+id/needAmbulance"
        app:layout_constraintVertical_bias="0.088" />

    <CheckBox
        android:id="@+id/extremeHeat"
        android:layout_width="138dp"
        android:layout_height="40dp"
        android:layout_margin="10dp"
        android:padding="5dp"
        android:text="EXTREAME HEAT WAVES"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.476"
        app:layout_constraintStart_toEndOf="@+id/earthquake"
        app:layout_constraintTop_toBottomOf="@+id/rabies"
        app:layout_constraintVertical_bias="0.103" />

    <CheckBox
        android:id="@+id/needAmbulance"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:padding="5dp"
        android:text="NEED AMBULANCE"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.605"
        app:layout_constraintStart_toEndOf="@+id/damFailure"
        app:layout_constraintTop_toBottomOf="@+id/thunderStorms"
        app:layout_constraintVertical_bias="0.08" />

    <Button
        android:id="@+id/confirm_button"
        android:layout_width="84dp"
        android:layout_height="44dp"
        android:background="@drawable/submit"
        android:text="CONFIRM"
        android:textColor="@color/white"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.84"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.917" />

    <TextView
        android:id="@+id/textView5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="CHOOSE WHAT TYPE OF EMERGENCY"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.06" />

    <TextView
        android:id="@+id/timedatetext"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#000000"
        android:textSize="20sp"
        android:visibility="visible"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.182"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.907"
        tools:visibility="visible" />

</androidx.constraintlayout.widget.ConstraintLayout>